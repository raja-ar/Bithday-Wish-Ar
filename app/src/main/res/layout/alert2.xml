<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
android:id="@+id/widget31"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<TextView
android:id="@+id/tvalert1"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Alert"
android:textStyle="bold"
android:layout_x="177dp"
android:layout_y="3dp"
>
</TextView>
<TextView
android:id="@+id/tvmessage"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Sara Birthday"
android:textColor="#ffff9900"
android:layout_x="149dp"
android:layout_y="25dp"
>
</TextView>
<Button
android:id="@+id/bPMessage"
android:layout_width="250px"
android:layout_height="wrap_content"
android:text="Send Global Greeting"
android:textStyle="bold"
android:textColor="#ff333333"
android:layout_x="17dp"
android:layout_y="52dp"
android:onClick="doSendGlobalGreeting"
>
</Button>
<Button
android:id="@+id/bCreateNew"
android:layout_width="250px"
android:layout_height="wrap_content"
android:text="Create New Greeting"
android:textStyle="bold"
android:textColor="#ff333333"
android:layout_x="215dp"
android:layout_y="53dp"
android:onClick="doCreateGreeting"
>
</Button>
<AbsoluteLayout
android:id="@+id/abMessage"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:visibility="invisible"
android:layout_x="126dp"
android:layout_y="179dp"
>
<EditText
android:id="@+id/etMessage"
android:layout_width="239px"
android:layout_height="104px"
android:textSize="18sp"
android:layout_x="0px"
android:layout_y="23px"
>
</EditText>
<Button
android:id="@+id/bPost"
android:layout_width="60px"
android:layout_height="wrap_content"
android:text="Post"
android:layout_x="176px"
android:layout_y="127px"
android:onClick="doPost"
>
</Button>
<TextView
android:id="@+id/tvMessage"
android:layout_width="wrap_content"
android:layout_height="18px"
android:text="Message"
android:textColor="#ffffffff"
android:layout_x="3px"
android:layout_y="3px"
>
</TextView>
</AbsoluteLayout>
</AbsoluteLayout>
