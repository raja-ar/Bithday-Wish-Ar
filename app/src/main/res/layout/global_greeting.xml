<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
android:id="@+id/widget31"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<TextView
android:id="@+id/tvGlobalGreeting"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Global Greeting"
android:textStyle="bold"
android:layout_x="131dp"
android:layout_y="3dp"
>
</TextView>
<TextView
android:id="@+id/tvmessage"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Message"
android:textColor="#ffffffff"
android:layout_x="30px"
android:layout_y="45px"
>
</TextView>
<EditText
android:id="@+id/etmessage"
android:layout_width="262px"
android:layout_height="140px"
android:textSize="18sp"
android:layout_x="127dp"
android:layout_y="29dp"
>
</EditText>
<Button
android:id="@+id/bSave"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Save"
android:layout_x="51dp"
android:layout_y="113dp"
android:onClick="doSaveGreeting"
>
</Button>
<Button
android:id="@+id/bBack"
android:layout_width="119dp"
android:layout_height="wrap_content"
android:text="Back"
android:layout_x="195dp"
android:layout_y="112dp"
android:onClick="doBackToMain"
>
</Button>
</AbsoluteLayout>
